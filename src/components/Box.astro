---
import iconsProyects from "../data/iconsProyect";
interface Props {
  title: string;
  description: string;
  link: string;
  img: ImageMetadata;
  technologies: any;
}
const { title, description, img, link, technologies } = Astro.props;
---

<li>
  <a
    href={link}
    target="_blank"
    class="border rounded-md overflow-hidden border-white/30 hover:border-shadow hover:bg-white/10 min-h-96 flex flex-col justify-between"
  >
    <img
      src={img?.src}
      alt=""
      class="aspect-video object-cover"
    />

    <div>
      <h3 class="text-lg font-bold p-2">{title}</h3>
      <p class="text-white/50 pl-2">{description}</p>
    </div>

    <div class="flex gap-2 p-2">
      {
        technologies.map((technology) => (
          <span class="block w-7">
            <img
              src={iconsProyects[technology].src}
              alt={technology}
            />
          </span>
        ))
      }
    </div>
  </a>
</li>
